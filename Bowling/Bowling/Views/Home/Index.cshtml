@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>

<h1>@ViewBag.TeamName</h1>
<a class="btn btn-primary btn-lg float-lg-end m-1" asp-controller="Home" asp-action="Form">Add a Bowler</a>

<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Bowler ID</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Middle Initial</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>Zip</td>
            <td>Phone Number</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.BowlerID</td>
            <td>@x.BowlerFirstName</td>
            <td>@x.BowlerLastName</td>
            <td>@x.BowlerMiddleInit</td>
            <td>@x.BowlerAddress</td>
            <td>@x.BowlerCity</td>
            <td>@x.BowlerState</td>
            <td>@x.BowlerZip</td>
            <td>@x.BowlerPhoneNumber</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-bowlerid="@x.BowlerID">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-bowlerid="@x.BowlerID">Delete</a></td>

        </tr>
        }
    </tbody>

</table>
