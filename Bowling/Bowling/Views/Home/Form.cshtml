@{
    ViewBag.Title = "Form";
}

@model Bowling.Models.Bowler


<style>
    div.validation-message {
        color: rgb(220, 53, 69);
        font-weight: 500
    }
</style>

<h3 class="bg-dark text-white text-center p-1">Add a Bowler</h3>

<form method="post">
    <div asp-validation-summary="All"></div>
    <label asp-for="TeamID">Team</label>
    <select asp-for="TeamID">
        <option value="">Select a Team</option>
        @foreach (var t in ViewBag.Teams)
        {
            <option value="@t.TeamID">@t.TeamName</option>
        }
    </select>

    <div class="form-group">
        <label>First Name:</label>

        <input class="form-control text-success border border-primary bg-light" asp-for="BowlerFirstName">
    </div>

    <div class="form-group">
        <label>Last Name:</label>
        <input class="form-control text-success border border-primary bg-light" asp-for="BowlerLastName" />
    </div>

    <div class="form-group">
        <label>Middle Inital:</label>
        <input class="form-control text-success border border-primary bg-light" asp-for="BowlerMiddleInit" />
    </div>

    <div class="form-group">
        <label>Address</label>
        <input class="form-control text-success border border-primary bg-light" asp-for="BowlerAddress" />
    </div>

    <div class="form-group">
        <label>City:</label>
        <input class="form-control text-success border border-primary bg-light" asp-for="BowlerCity" />
    </div>

    <div class="form-group">
        <label>State:</label>
        <input class="form-control text-success border border-primary bg-light" asp-for="BowlerState" />
    </div>

    <div class="form-group">
        <label>Zip:</label>
        <input class="form-control text-success border border-primary bg-light" asp-for="BowlerZip" />
    </div>


    <div class="form-group">
        <label>Phone Number:</label>
        <input class="form-control text-success border border-primary bg-light" asp-for="BowlerPhoneNumber" />
    </div>
    @if (ViewBag.Added = false)
    {
        <input type="hidden" asp-for="BowlerID" />

    }
        <input type="hidden" asp-for="TeamID" />

    <br />
    <button type="submit" class="btn btn-dark p-1">Add</button>
    <a class="btn btn-light p-1" asp-controller="Home" asp-action="Index">Cancel</a>

</form>
